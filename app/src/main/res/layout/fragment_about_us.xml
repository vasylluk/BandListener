<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="This app is created by"
            android:textAlignment="center"
            android:textSize="25sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textAboutUsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="KrishnaGanesh.S.R ,(B.E.CSE), "
            android:textAlignment="center"
            android:textSize="25sp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textAboutUsCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="St.Joseph College Of Engineering,Chennai"
            android:textAlignment="center"
            android:textSize="25sp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textAboutUsContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Contact Us:"
            android:textAlignment="center"
            android:textSize="25sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="vasyl3luk@gmail.com"
            android:textAlignment="center"
            android:textSize="25sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textAboutVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Version: 4.0"
            android:textAlignment="center"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>